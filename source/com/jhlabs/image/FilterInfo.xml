<filters>

    <filter class='com.jhlabs.image.BumpFilter' group='Distort'>
        <param property='height' name='Height' type='float' min='0.1' max='2.0'/>
    </filter>

    <filter class='com.jhlabs.image.CausticsFilter' group='Texture'>
        <param property='scale' name='Scale' type='float' min='1' max='300'/>
        <param property='amount' name='Focus' type='percentage'/>
        <param property='dispersion' name='Dispersion' type='percentage'/>
        <param property='brightness' name='Brightness' type='int' min='0' max='20'/>
        <param property='samples' name='Samples' type='int' min='1' max='10'/>
        <param property='turbulence' name='Turbulence' type='float' min='0' max='8'/>
        <param property='bgColor' name='Background' type='color'/>
        <param property='time' name='Time' type='float' min='0' max='10'/>
    </filter>

    <filter class='com.jhlabs.image.CrystallizeFilter' group='Pixellate'>
        <param property='scale' name='Size' type='float' min='1' max='100'/>
        <param property='angle' name='Angle' type='angle' min='0' max='360'/>
        <param property='randomness' name='Randomness' type='percentage'/>
        <param property='edgeThickness' name='Edges' type='percentage'/>
        <param property='gridType' name='Shape' type='choice' 
               choices='Random|Squares|Hexagons|Octagons &amp; Squares|Triangles'/>
        <param property='fadeEdges' name='Fade Edges' type='boolean'/>
        <param property='edgeColor' name='Edge Color' type='color'/>
    </filter>
</filters>
